#include <stdio.h>
int add(int *a,int *b)
{
    printf("Enter 2 numbers");
    scanf("%d%d", a,b);
}
int calc(int *a, int *b)
{
    int sum;
    sum=*a+*b;
    return sum;
}
int output(int a,int b, int c)
{
    printf("%d+%d=%d",a,b,c);
}
void main()
{
    int z,a,b;
    add(&a,&b);
    z=calc(&a,&b);
    output(a,b,z);
}
