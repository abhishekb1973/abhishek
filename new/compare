#include <stdio.h>
int add(int *a,int *b,int *c)
{
    printf("Enter 3 numbers");
    scanf("%d%d%d", a,b,c);
}
int calc(int a, int b,int c)
{
    int min;
    if(a<b)
    min=a;
    else;
    min=b;
    if(min>c)
    min=c;
    return min;
}
int output(int a)
{
    printf("%d is smallest",a);
}
void main()
{
    int z,a,b,c;
    add(&a,&b,&c);
    z=calc(a,b,c);
    output(z);
}
