#include <stdio.h>
int add (int *a, int *b, int *c) 
{
  
printf ("Enter 3 numbers");
scanf ("%d%d%d", a, b, c);

} 
int calc (int a, int b, int c) 
{
  
int big;
  
big = a <b ? (a < c ? a : c) : (b < c ? b : c);

return big ;
}

int output(int a)
{
    printf("%d is smallest",a);
}
void main()
{
    int z,a,b,c;
    add(&a,&b,&c);
    z=calc(a,b,c);
    output(z);
}
